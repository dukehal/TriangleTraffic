<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="General" >
        <ListPreference
            android:key="radius_list"
            android:title="Radius from venues"
            android:defaultValue="1"
            android:entries="@array/pref_radius_list_titles"
            android:entryValues="@array/pref_radius_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />
        <ListPreference
            android:key="timing_list"
            android:title="Notification time before event"
            android:defaultValue="60"
            android:entries="@array/pref_timing_list_titles"
            android:entryValues="@array/pref_timing_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Notifications">
        <CheckBoxPreference
            android:key="text_mode"
            android:title="@string/pref_text_mode_title"
            android:summary="Enable Text Notifications"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="vibrate_mode"
            android:title="@string/pref_vibrate_mode_title"
            android:summary="Enable Vibration Notifications"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="audio_mode"
            android:title="@string/pref_audio_mode_title"
            android:summary="Enable Audio Notifications"
            android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>