<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.duke.pratt.hal.triangletraffic.activities.InfoActivity"
    android:transitionGroup="true">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="320dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:layout_below="@+id/map">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableLayout"
                android:stretchColumns="2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spacer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Venue"
                        android:id="@+id/venueLabel"
                        android:layout_below="@+id/map"
                        android:layout_alignLeft="@+id/venueName"
                        android:layout_alignStart="@+id/venueName"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="false"
                        android:textSize="15dp"
                        android:layout_above="@+id/checkBox"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Distance"
                        android:id="@+id/distanceLabel"
                        android:textSize="15dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/venueName"
                        android:layout_toEndOf="@+id/venueName"
                        android:layout_gravity="right"
                        android:paddingRight="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBox"
                        android:checked="false"
                        android:layout_below="@+id/distanceLabel"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:button="@xml/customdrawablecheckbox"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cameron Indoor Stadium"
                        android:id="@+id/venueName"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:layout_below="@+id/venueLabel"
                        android:layout_toRightOf="@+id/checkBox"
                        android:layout_toEndOf="@+id/checkBox"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculating..."
                        android:id="@+id/distanceValue"
                        android:textSize="25dp"
                        android:layout_below="@+id/distanceLabel"
                        android:layout_alignRight="@+id/distanceLabel"
                        android:layout_alignEnd="@+id/distanceLabel"
                        android:layout_column="2"
                        android:layout_gravity="right"
                        android:paddingRight="10dp" />
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout3"
                android:layout_below="@+id/tableLayout">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:stretchColumns="1"
                    android:layout_marginTop="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Type"
                            android:id="@+id/venueTypeLabel"
                            android:textSize="15dp"
                            android:layout_below="@+id/checkBox"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:textAllCaps="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Affiliation"
                            android:id="@+id/venueAffiliationLabel"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_alignTop="@+id/venueType"
                            android:layout_toRightOf="@+id/venueType"
                            android:layout_toEndOf="@+id/venueType"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:textAllCaps="false" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Stadium"
                            android:id="@+id/venueType"
                            android:layout_below="@+id/venueTypeLabel"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textSize="25dp"
                            android:paddingRight="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Duke University"
                            android:id="@+id/venueAffiliation"
                            android:textSize="25dp"
                            android:layout_below="@+id/venueAffiliationLabel"
                            android:layout_toRightOf="@+id/venueType" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Address"
                            android:id="@+id/venueAddressLabel"
                            android:textSize="15dp"
                            android:layout_below="@+id/venueType"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_span="2"
                            android:textAllCaps="false" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="155 Whitford Drive, Durham, NC 27708"
                            android:id="@+id/venueAddress"
                            android:textSize="25dp"
                            android:layout_below="@+id/venueAddressLabel"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_span="2" />
                    </TableRow>

                </TableLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Upcoming Events"
                android:id="@+id/upcomingEventsLabel"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/relativeLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:id="@+id/tableLayout2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:id="@+id/timeUntilLabel"
                    android:src="@drawable/ic_schedule_grey600_24dp"
                    android:layout_below="@+id/upcomingEventsLabel"
                    android:layout_toRightOf="@+id/venueTypeLabel"
                    android:layout_toLeftOf="@+id/venueName"
                    android:layout_toStartOf="@+id/venueName"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Date"
                    android:id="@+id/eventDateLabel"
                    android:textSize="20dp"
                    android:layout_below="@+id/upcomingEventsLabel"
                    android:layout_alignLeft="@+id/venueAffiliation"
                    android:layout_alignStart="@+id/venueAffiliation"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Time"
                    android:id="@+id/eventTimeLabel"
                    android:textSize="20dp"
                    android:layout_alignBaseline="@+id/eventDateLabel"
                    android:layout_alignBottom="@+id/eventDateLabel"
                    android:layout_toRightOf="@+id/venueAddress"
                    android:layout_toEndOf="@+id/venueAddress"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Event"
                    android:id="@+id/eventNameLabel"
                    android:textSize="20dp"
                    android:layout_alignTop="@+id/eventTimeLabel"
                    android:layout_alignRight="@+id/distanceLabel"
                    android:layout_alignEnd="@+id/distanceLabel"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />
            </TableRow>
        </TableLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_below="@+id/tableLayout2">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayout"
                android:id="@+id/eventTable">

            </TableLayout>
        </ScrollView>
    </RelativeLayout>


</RelativeLayout>
